@if (IsVisible)
{
    <div class="container text-center mt-5">
        <div class="p-5 rounded" style="background-color: rgba(0, 0, 0, 0.6);">
            <h2 class="display-4">@Title</h2>
            <p class="lead">@Message</p>
            <hr class="my-4" />
            <button class="btn btn-primary btn-lg" @onclick="HandleContinue">@ContinueButtonText</button>
        </div>
    </div>
}

@code {
    [Parameter]
    public bool IsVisible { get; set; }

    [Parameter]
    public string Title { get; set; } = "Victory!";

    [Parameter]
    public string Message { get; set; } = "The battle is over.";

    [Parameter]
    public string ContinueButtonText { get; set; } = "Continue";

    [Parameter]
    public EventCallback OnContinue { get; set; }

    private async Task HandleContinue()
    {
        await OnContinue.InvokeAsync();
    }
}